<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EziiRecipe"
        android:textSize="110px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056"
        android:shadowDx="30"
        android:shadowDy="30"
        android:fontFamily="cursive"
        android:textColor="@color/orangelight"
        android:background=""
        android:id="@+id/t1"
        />

    <ActionMenuView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/silvergrey"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_marginEnd="36dp"
        android:divider="@android:drawable/ic_menu_sort_by_size"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="26dp"
        android:id="@+id/am"
        />

    <SearchView
        android:id="@+id/sv"
        android:layout_width="351dp"
        android:layout_height="43dp"
        android:queryHint="Get your favourite recipes "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        app:layout_constraintVertical_bias="0.339"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="328dp"
        android:layout_height="124dp"
        android:background=""
        android:fontFamily="sans-serif-black"
        android:shadowDx="30"
        android:shadowDy="30"
        android:text="Recommended Dishes"
        android:textColor="@color/silvergrey"
        android:textSize="70px"
        app:layout_constraint="@+id/sv"
        app:layout_constraintStart_toBottomtOf="parent"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="138dp" />


</androidx.constraintlayout.widget.ConstraintLayout>